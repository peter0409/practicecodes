public class Base2 {

    public int[] powerOfTwo(int n) {

        int[] result = new int[n];
        int i, value = 1;
        result[0] = value;

        for (i = 1; i < n; i++) {
            value = 2 * value;
            result[i] = value;

        }

        return result;
    }

}
